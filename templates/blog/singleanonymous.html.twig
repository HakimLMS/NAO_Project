{% extends "base.html.twig" %}

{% block title %}{{ data.title }}{% endblock %}

{% block body %}
    <div class="container-fluid" id="blog-single">
		
		<div class="article-img"><img src="{{ asset('build/img/'~data.image) }}"></div>

		<div class="container" id="block-article">
			<h2>{{ data.title }}</h2>

			<br>

			<div class="article-content">
				{{ data.content }}
			</div>

			<br>

			<div id="block-date">
				Ecrit le {{ data.dateArticle|date("d/m/Y") }}
			</div>
		</div>	

		<div id="purple-bar"></div>

		<br>

		<div class="container" id="block-comments">
			<div class="row">
				<div class="col-12 offset-md-2 col-md-8">
					<img src="{{ asset('build/img/bubbles-comment.svg') }}" width="35px" height="26px">
					{% for comment in data.comments %}
						<div class="block-comment">
							<p class="comment-author">Par {{ comment.author.firstname }} {{ comment.author.lastname|upper|first }}. <span class="author-type">{{ comment.author.type|upper|first }}</span></p>
							<p>{{ comment.content }}</p>
							<p class="comment-date">Posté le {{ comment.dateComment|date('d/m/Y') }} à {{ comment.dateComment|date('H:i') }}</p>
						</div>
					{% else %}
						<p>Aucun commentaire.</p>	
					{% endfor %}

					<br>

					<div id="block-comment-anonymous">
				            <h3>Ecrire un commentaire</h3>
				            <div class="container">
				            	<div class="row">
				            		<a class="col-12 col-md-6" href="{{ path('login') }}"><button class="btn">Se connecter</button></a>
				           			<a class="col-12 col-md-6" href="{{ path('subscribe') }}"><button class="btn">S'inscrire</button></a>
				            	</div>
				            </div>
				            
					</div>
				</div>
			</div>
		</div>
	</div>				


{% endblock %}	

